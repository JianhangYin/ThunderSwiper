.thunder_swiper
  width 80vw
  height 40vw
  position fixed
  top 50%
  left 50%
  margin-left -(@width / 2)
  margin-top -(@height / 2)

  &_content_web_horizontal
    position absolute
    top 0
    left -100%
    right -100%
    width 300%
    height 100%

    &_previous
      position absolute
      top 0
      left 8vw
      width 64vw
      height 100%
      opacity 0.5

    &_current
      position absolute
      top 0
      left 88vw
      width 64vw
      height 100%

    &_next
      position absolute
      top 0
      right 8vw
      width 64vw
      height 100%
      opacity 0.5

  &_content_web_vertical
    position absolute
    top -100%
    left 10%
    right 10%
    width 80%
    height 300%

    &_previous
      position absolute
      top 0
      left 0
      width 100%
      height 40vw
      opacity 0.5

    &_current
      position absolute
      top 40vw
      left 0
      width 100%
      height 40vw

    &_next
      position absolute
      top 80vw
      left 0
      width 100%
      height 40vw
      opacity 0.5

  &_previous
    position absolute
    top 40%
    left 2%
    width 7%
    height 20%
    -moz-user-select none
    -ms-user-select none
    -webkit-user-select none
    -o-user-select none
    user-select none

    &:hover
      transform scale(0.9)
    &:active
      transform scale(1.1)
      transition transform 100ms


  &_content_navigation
    position absolute
    left 10%
    width 80%
    height 100%
    background yellow

  &_close
    position absolute
    width 5%
    height 10%
    top -5%
    right 7.5%

    &:hover
      transform scale(0.9)

  &_next
    position absolute
    top 40%
    right 2%
    width 7%
    height 20%
    -moz-user-select none
    -ms-user-select none
    -webkit-user-select none
    -o-user-select none
    user-select none

    &:hover
      transform scale(0.9)
    &:active
      transform scale(1.1)
      transition transform 100ms

.swiper_navigation_animation-enter
  opacity 0
.swiper_navigation_animation-enter.swiper_navigation_animation-enter-active
  opacity 1
  transition opacity 300ms ease-in
.swiper_navigation_animation-leave
  opacity 0

.swiper_web_horizontal_left_animation-enter
  transform translateX(80vw)
.swiper_web_horizontal_left_animation-enter.swiper_web_horizontal_left_animation-enter-active
  transform translateX(0)
  transition transform  300ms ease-in
.swiper_web_horizontal_left_animation-leave
  transform translateX(0)
.swiper_web_horizontal_left_animation-leave.swiper_web_horizontal_left_animation-leave-active
  transform translateX(-80vw)
  transition transform  300ms ease-in


.swiper_web_horizontal_right_animation-enter
  transform translateX(-80vw)
.swiper_web_horizontal_right_animation-enter.swiper_web_horizontal_right_animation-enter-active
  transform translateX(0)
  transition transform  300ms ease-in
.swiper_web_horizontal_right_animation-leave
  transform translateX(0)
.swiper_web_horizontal_right_animation-leave.swiper_web_horizontal_right_animation-leave-active
  transform translateX(80vw)
  transition transform  300ms ease-in

.swiper_web_vertical_up_animation-enter
  transform translateY(40vw)
.swiper_web_vertical_up_animation-enter.swiper_web_vertical_up_animation-enter-active
  transform translateY(0)
  transition transform  300ms ease-in
.swiper_web_vertical_up_animation-leave
  transform translateY(0)
.swiper_web_vertical_up_animation-leave.swiper_web_vertical_up_animation-leave-active
  transform translateY(-40vw)
  transition transform  300ms ease-in


.swiper_web_vertical_down_animation-enter
  transform translateY(-40vw)
.swiper_web_vertical_down_animation-enter.swiper_web_vertical_down_animation-enter-active
  transform translateY(0)
  transition transform  300ms ease-in
.swiper_web_vertical_down_animation-leave
  transform translateY(0)
.swiper_web_vertical_down_animation-leave.swiper_web_vertical_down_animation-leave-active
  transform translateY(40vw)
  transition transform  300ms ease-in


